@model IEnumerable<MovieDirectorApp.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h1>Movie Listing</h1>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row movie-index">
    <div class="container" id="movie-index">
        <div id="myCarousel" class="carousel side" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" class="active"></li>
                @foreach (var item in Model)
                {
                    <li data-target="#myCarousel"></li>
                }
            </ol>
            <!-- Wrapper for sides -->
            <div class="carousel-inner">
                <div class="item active">
                    <p>
                        @Html.ActionLink("Create New", "Create")
                    </p>
                </div>
                @foreach (var item in Model)
                {
                    <div class="item">
                        <div class="caption" id="movie-index">
                            <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                            <p>@Html.DisplayNameFor(model => model.Genre.Type) : @Html.DisplayFor(modelItem => item.Genre.Type)</p>
                            <p>@Html.DisplayNameFor(model => model.Rating) :  @Html.DisplayFor(modelItem => item.Rating)</p>
                            <p>@Html.ActionLink("Details", "Details", new { id = item.MovieID })</p>
                        </div>
                    </div>
                }
            </div>
            <!-- Left and right controls-->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>



   
</div>




